@page
@model Devblog.Pages.PostsModel
@using Devblog.Domain.Model
@{
    ViewData["Title"] = "Posts";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="mb-4">Blog Posts</h2>
        @if (HttpContext.Session.GetString("ID") != null)
        {
            <a class="btn btn-primary" href="/Posts/CreatePost">Create New Post</a>
        }
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Reference</th>
                    <th scope="col">Weblog</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.BlogPosts.Any())
                {
                    @foreach (var blogPost in Model.BlogPosts)
                    {
                        <tr>
                            <td>@blogPost.Title</td>
                            <td>@blogPost.Author.Fullname</td>
                            <td>@blogPost.Reference</td>
                            <td>@blogPost.Weblog</td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-page="/Posts/Post" asp-route-id="@blogPost.Id">View</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No blog posts available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <hr class="my-5" />

    <h2 class="mb-4">Portfolio</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Reference</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Projects.Any())
                {
                    @foreach (var project in Model.Projects)
                    {
                        <tr>
                            <td>@project.Title</td>
                            <td>@project.Author.Fullname</td>
                            <td>@project.Reference</td>
                            <td>@project.Description</td>
                            <td>
                                <a class="btn btn-warning btn-sm" asp-page="/Posts/Post" asp-route-id="@project.Id">View</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No portfolio projects available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
